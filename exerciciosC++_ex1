#include <iostream>
#include <string>

using namespace std;

class Person {
private:
	string name;
	float height;
	int age

public:
	Person(string name);
	void setName(string p1) { name = p1; }
	string getName() { return name; } 
	void sayIt();
	~Person() { cout << "Goodbye " << this->name << "! (" << this << ")" << endl; }

};

Person::Person(string name){
	this->name = name;
	cout << "Create Person " << this->name <<  "! (" << this << ")" << endl;
}

void Person::sayIt() {
	
	cout << "Hello " << this->name << "! (" << this << ")" << endl;
}

Person gbl_obj("Global");

void func1() {

    Person obj1("Earth");
	obj1.sayIt();

	gbl_obj.sayIt();

	cout << "Leaving func1()" << endl;

}

int main() {

	cout << "Calling func1()" << endl;
	func1();

	Person obj2("Mordor");
	obj2.sayIt();

	Person * obj3;
	obj3 = new Person("Dynamic");

	obj3->sayIt();

	cout << obj3->name() << endl;

	obj3->name("Dynamic Person");

	obj3->sayIt();

	cout << obj3 << endl;

	delete obj3;

	cout << obj3 << endl;

	obj3->sayIt();

	gbl_obj.sayIt();

}
